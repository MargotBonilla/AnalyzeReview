{% extends 'base.html.twig' %}

{% block criteriaList %}

<div class="container">
    <legend>Criteria List</legend>

    {% if message %}
        <div id="message" class="alert alert-success alert-dismissible">{{ message }}</div>
    {% endif %}

    <div id="message_remove" class="hidden alert alert-success alert-dismissible"></div>

    <div class="table-content">
        <div id="content">
            <table id="grid" ></table>
            <div id="toolbar"></div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/criteria-grid.js') }}"></script>
{% endblock %}
